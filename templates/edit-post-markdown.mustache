<h1>Edit Post</h1>
<form method="post" action="/admin/post/edit/{{id}}">
	<label for="title">Title</label>
	<input type="text" id="title" name="title" value="{{Title}}" style="width: 300px" /><br />
	<label for="content">Content</label>
	<div style="clear: both"></div>
	<textarea id="content" name="content" style="width: 100%; height: 200px; padding: 3px 5px; margin: 5px 0;">{{Content}}</textarea><br />
	<label for="status">Status</label>
	<select name="status" id="status">
		<option value="0"{{#Draft}} selected="selected"{{/Draft}}>Draft</option>
		<option value="1"{{#Publish}} selected="selected"{{/Publish}}>Published</option>
	</select>
	<br />
	<input type="submit" value="Save!" />
</form>