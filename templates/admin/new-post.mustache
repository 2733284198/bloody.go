<article class="module width_full">
	<header><h3>Create New Post</h3></header>
	<form method="post" action="/admin/post/new">
	<div class="module_content">
		<fieldset>
			<label for="title">Title</label>
			<input type="text" id="title" name="title" />
		</fieldset>
		<fieldset>
			<label for="content">Content</label>
			<div style="clear: both"></div>
			<textarea id="content" name="content" style="height: 200px;"></textarea>
		</fieldset>
	</div>
	<footer>
		<div class="submit_link">
			<select name="status" id="status">
				<option value="0" selected="selected">Draft</option>
				<option value="1">Published</option>
			</select>
			<input type="submit" value="Post!" />
		</div>
	</footer>
	</form>
</article>
<script type="text/javascript">
$('#content').cleditor()[0].focus();
</script>
